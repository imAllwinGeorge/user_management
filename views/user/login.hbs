
<link rel="stylesheet" href="/userLogin.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-4">
        <!-- Form start -->
        <form action="/user/login" method="post">
            <div class="login-container p-4">
                <h3 class="text-center mb-4">Login</h3>
                    {{#if message}}
                     <h4 class="text-danger" id="message">{{message}}</h4>
                    {{/if}}
                <div class="mb-3">
                    <label for="email" class="form-label fw-bold">Email</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="email" >
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label fw-bold">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="password"
                       >
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary"><span class="subbtn fs-4 fw-bold">Submit</span></button>
                </div>
            </div>
        </form>
        <a href="/user/register">SignUp</a>
        <!-- Form end -->
    </div>
</div>

<script>

    document.addEventListener('DOMContentLoaded',function(){
        document.querySelector('form').addEventListener('submit',formValidate)
    });


    const message = document.getElementById('message').value
    if(message){
    swal(message);
    }

    function formValidate(e){
        e.preventDefault();
        var email = document.getElementById('email').value;
        var password = document.getElementById('password').value;

        if(email=='' || password==''){
            swal("all the fields are required")
            return false;
        }
        e.target.submit();
        return true;
    }
</script>
